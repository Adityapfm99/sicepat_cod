<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <report 
            id="report_invoice_form" 
            model="account.invoice.line" 
            string="Print Tanda Terima"
            report_type="qweb-pdf"
            name="resi_status.report_tanda_terima" 
            file="resi_status.report_tanda_terima"
        />

<template id="report_tanda_terima">
    

    <t t-call="report.html_container">

        <t t-foreach="docs" t-as="o">
            <div class="header">
                <div class="row" style="text-align:left;">
                    <strong><span t-esc="time.strftime('%%d/%%m/%%Y %%H:%%M:%%S')"/></strong>
                </div>
                <div class="row" style="text-align:left;">
                    <h3><strong style="border-bottom: 4px double black;">TANDA TERIMA BARANG</strong></h3>
                </div>
                <!-- <div class="row" style="text-align:left;">
                    <strong><span t-esc="o.name"/></strong>
                </div> -->
            </div>
            <div class="page">
                <table class="row">
                    <tr style="text-align:left;">
                    <td><strong>Sicepat Ekspres Indonesia</strong></td>
                    </tr>
                </table>
                <table>
                    <tr>
                        <td>Telah diterima barang COD dari Kurir</td>
                        <td>&#160;:&#160;</td>
                        <td><span t-esc="o.get_last_sigesit()"/></td>
                    </tr>
                    <tr>
                        <td>Untuk No. Resi</td>
                        <td>&#160;:&#160;</td>
                        <td><span t-field="o.name"/></td>
                    </tr>
                    <tr>
                        <td>Pada Tanggal</td>
                        <td>&#160;:&#160;</td>
                        <td><span t-esc="time.strftime('%%d/%%m/%%Y %%H:%%M:%%S')"/></td>
                    </tr>
                </table>
                <br>
                </br>
                <table class="row">
                    <tr>
                        <td> Diterima oleh : Admin Cabang</td>
                        <td>&#160;&#160;</td>
                        <td>(<span t-esc="o.get_last_position()"/>)</td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            Jakarta, <span t-esc="time.strftime('%%d/%%m/%%Y')"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Tandatangan</strong></td>
                        <td>&#160;&#160;</td>
                        <td>&#160;&#160;</td>
                    </tr>
                    <tr>
                        <td>Admin Cabang</td>
                        <td></td>
                        <td>Sigesit</td>
                    </tr>
                    <tr>
                        <td><br><br><br></br></br></br></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><span t-esc="o.getuser()"/></td>
                        <td>&#160;&#160;</td>
                        <td><span t-esc="o.get_last_sigesit()"/></td>
                    </tr>
                </table>
            </div>
        </t>
    </t>
</template>
</data>
</openerp>
